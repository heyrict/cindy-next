[Unit]
Description=Cindy-next subscription server
After=network.target

[Service]
User=heyrict
Group=www-data
WorkingDirectory=/path/to/cindy-next
Environment=NODE_ENV=production
#Environment=PGDB=...
ExecStart=/path/to/node /path/to/cindy-next/.next/dist/server/apolloServer.js
Restart=always

[Install]
WantedBy=multi-user.target

